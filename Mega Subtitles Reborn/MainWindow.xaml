                </ToggleButton>

                <Button x:Name="DeleteCommentsBtn"  Width="255" HorizontalContentAlignment="Left" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFFFDAB3" Click="DeleteCommentsBtn_Click">
                    <Grid Width="250">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xED61;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="DeleteCommentsTB" Text="Delete comments of selected actors" TextWrapping="WrapWithOverflow" HorizontalAlignment="Right" FontFamily="Nunito SemiBold" FontSize="14" Width="230" TextAlignment="Center"/>
