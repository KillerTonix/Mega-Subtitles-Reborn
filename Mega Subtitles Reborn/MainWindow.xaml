<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mega_Subtitles_Reborn"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Name="GeneralWindow"
        x:Class="Mega_Subtitles_Reborn.MainWindow"
        mc:Ignorable="d"
        Title="Mega Subtitles Reborn" 
        Height="830" Width="1376" Background="#FF1F1F23" BorderThickness="2" 
        WindowStartupLocation="CenterScreen" Visibility="Visible" WindowState="Normal"
        ShowInTaskbar="True" ResizeMode="CanResize" SizeToContent="Manual" MinHeight="785" MinWidth="1260" Closing="GeneralWindow_Closing" BorderBrush="Black">

    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="S" Command="{Binding CtrlS}" />
        <KeyBinding Modifiers="Control" Key="I" Command="{Binding CtrlI}" />
        <KeyBinding Modifiers="Control" Key="E" Command="{Binding CtrlE}" />
        <KeyBinding Modifiers="Control" Key="W" Command="{Binding CtrlW}" />
        <KeyBinding Modifiers="Control" Key="O" Command="{Binding CtrlO}" />
        <KeyBinding Modifiers="Control" Key="D" Command="{Binding CtrlD}" />
        <KeyBinding Modifiers="Control" Key="M" Command="{Binding CtrlM}" />
        <KeyBinding Modifiers="Control" Key="R" Command="{Binding CtrlR}" />
        <KeyBinding Modifiers="Control" Key="A" Command="{Binding CtrlA}" />
        <KeyBinding Modifiers="Control" Key="P" Command="{Binding CtrlP}" />
        <KeyBinding Modifiers="Control" Key="F" Command="{Binding CtrlF}" />
        <KeyBinding Modifiers="Control" Key="Z" Command="{Binding CtrlZ}" />
        <KeyBinding Modifiers="Control" Key="H" Command="{Binding CtrlH}" />
    </Window.InputBindings>
    <Window.Resources>
        <Style x:Key="CustomToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FFFFDAB3"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF979797"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Nunito SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
            Background="{TemplateBinding Background}"
            CornerRadius="0"
            Padding="1"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Content="{TemplateBinding Content}"
                          ContentTemplate="{TemplateBinding ContentTemplate}"
                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFff5c5c"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFFFDAB3"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFff9d9d"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFff5c5c"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFF4F4F4"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFADB2B5"/>
                                <Setter Property="Foreground" Value="#FF838383"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFFFDAB3"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FFFFDAB3"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFff9d9d"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FFff5c5c"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFff5c5c"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FFff5c5c"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFe5eed2"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFe5eed2"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="CustomButtonStyleWithRedOwer" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <SolidColorBrush x:Key="Button.Static.Background1" Color="#FFFFDAB3"/>
        <SolidColorBrush x:Key="Button.Static.Border1" Color="#FFFFDAB3"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background1" Color="#FF53e6be"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border1" Color="#FF73fa79"/>
        <SolidColorBrush x:Key="Button.Pressed.Background1" Color="#FFb4e89d"/>
        <SolidColorBrush x:Key="Button.Pressed.Border1" Color="#FF73fa79"/>
        <SolidColorBrush x:Key="Button.Disabled.Background1" Color="#FFe5eed2"/>
        <SolidColorBrush x:Key="Button.Disabled.Border1" Color="#FFe5eed2"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground1" Color="#FF838383"/>
        <Style x:Key="CustomButtonStyleWithGreenOwer" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background1}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border1}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background1}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border1}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background1}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border1}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background1}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border1}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground1}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>

    </Window.Resources>



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4.6*"/>
            <RowDefinition Height="1.1*"/>
        </Grid.RowDefinitions>

        <Grid>
            <ListView x:Name="RegionManagerListView" ItemsSource="{Binding SubtitleEntries}"  Background="#FFF8EDEB" FontFamily="Nunito SemiBold" PreviewKeyDown="RegionManagerListView_PreviewKeyDown" MouseDoubleClick="RegionManagerListView_MouseDoubleClick">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="DeleteLineListViewContext" Header="Delete line" Click="DeleteLineListViewContext_Click" />
                        <MenuItem x:Name="DublicateLineListViewContext" Header="Duplicate line" Click="DublicateLineListViewContext_Click" />
                        <MenuItem x:Name="CopyTimingsListViewContext" Header="Copy Timings" Click="CopyTimingsListViewContext_Click" />
                        <MenuItem x:Name="CopyTextListViewContext" Header="Copy Text" Click="CopyTextListViewContext_Click" />
                        <MenuItem x:Name="CopyCommentsListViewContext" Header="Copy Comments" Click="CopyCommentsListViewContext_Click" />
                        <MenuItem x:Name="CopyLineInfoListViewContext" Header="Copy Line Info" Click="CopyLineInfoListViewContext_Click" />
                        <MenuItem x:Name="ClearCommentsListViewContext" Header="Clear Comment" Click="ClearCommentsListViewContext_Click" />
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.View>
                    <GridView>
                        <!-- # column -->
                        <GridViewColumn x:Name="NumberHeader" Header="#" Width="35">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Number}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold"  />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Color column -->
                        <GridViewColumn x:Name="ColorColumn" Header="Color">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Color}" Width="20" Height="20" BorderBrush="Black" BorderThickness="1,1,1,1" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Start column -->
                        <GridViewColumn x:Name="StartHeader" Header="Start" DisplayMemberBinding="{Binding Start}" />

                        <!-- End column -->
                        <GridViewColumn x:Name="EndHeader" Header="End" DisplayMemberBinding="{Binding End}"/>

                        <!-- Actors column -->
                        <GridViewColumn x:Name="ActorColumn" Header="Actor">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox x:Name="ActorComboBox"
                                      ItemsSource="{Binding DataContext.AvailableActors, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding Actor, UpdateSourceTrigger=PropertyChanged}"
                                      MinWidth="138" IsEditable="False" LostFocus="ActorComboBox_LostFocus">
                                    </ComboBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Text column -->
                        <GridViewColumn x:Name="TextHeader" Header="Text" DisplayMemberBinding="{Binding Text}"/>

                        <!-- Comment column (editable) -->
                        <GridViewColumn x:Name="CommentsColumn" Header="Comment">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox x:Name="CommentsTextBox"
                                    Text="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    MinWidth="200"
                                    AcceptsTab="True"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    FontFamily="Nunito SemiBold" LostFocus="CommentsTextBox_LostFocus">
                                    </TextBox>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid x:Name="ActorsGrid" Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <ListView x:Name="ActorsListView" Grid.Column="1"  ItemsSource="{Binding ActorEnteries}" Height="335" HorizontalAlignment="Stretch" VerticalAlignment="Top" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionMode="Extended" HorizontalContentAlignment="Stretch" Background="#FFF8EDEB" FontFamily="Nunito SemiBold" MouseDoubleClick="ActorsListView_MouseDoubleClick" PreviewMouseRightButtonDown="ActorsListView_PreviewMouseRightButtonDown">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="AddActorContext" Header="Add actor" Click="AddActorContext_Click"/>
                            <MenuItem x:Name="SetActorColorContext" Header="Set the color" Click="SetActorColorContext_Click" />
                            <MenuItem x:Name="RenameActorContext" Header="Rename an actor" Click="RenameActorContext_Click" />
                            <MenuItem x:Name="DeleteActorContext" Header="Delete an actor" Click="DeleteActorContext_Click" />
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <ListView.View>
                        <GridView>
                            <!-- # column -->
                            <GridViewColumn x:Name="ActorsNumberHeader" Header="#">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ActorsNumber}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold"  />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <!-- Color column -->
                            <GridViewColumn x:Name="ActorsColorColumn" Header="Color">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding ActorsColor}" Width="10" Height="20" BorderBrush="Black" BorderThickness="1,1,1,1" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn x:Name="ActorsColumnHeader" Header="Actors" DisplayMemberBinding="{Binding Actors}"/>
                            <GridViewColumn x:Name="ActorsLineCountHeader" Header="Line Count" DisplayMemberBinding="{Binding ActorsLineCount}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Grid Margin="0,10,0,0">
                    <Button x:Name="SelectAllActorsBtn" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="115" FontFamily="Nunito SemiBold" FontSize="14" Background="#FFFFF0C2" BorderBrush="#FFFBD485" Style="{DynamicResource CustomButtonStyleWithGreenOwer}" Click="SelectAllActorsBtn_Click">
                        <Grid Width="110">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE762;" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock x:Name="SelectAllActorsTB" Text="Select All" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </Button>
                    <Button x:Name="ParseSubtitlesBtn" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115" HorizontalContentAlignment="Center" FontFamily="Nunito Black" FontSize="16" Background="#FF63CBD6" BorderBrush="#FF95E1D4" Style="{DynamicResource CustomButtonStyleWithGreenOwer}" Click="ParseSubtitlesBtn_Click">
                        <Grid Width="110">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9F3;" FontSize="16" VerticalAlignment="Center" />
                            <TextBlock x:Name="ParseSubtitlesTB" Text="Parse" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" />
                        </Grid>
                    </Button>

                    <ToggleButton x:Name="FilterActorsBtn" HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="115" Margin="0,30,0,0" FontFamily="Nunito SemiBold" FontSize="14" Background="#FFFFF0C2" BorderBrush="#FFFBD485" Style="{StaticResource CustomToggleButton}" Checked="FilterActorsBtn_Checked" Unchecked="FilterActorsBtn_Unchecked">
                        <Grid  Width="110">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE71C;" FontSize="16" VerticalAlignment="Center" />
                            <TextBlock x:Name="FilterActorsTB" Text="Filter" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </ToggleButton>
                    <Button x:Name="ParseSRTSubtitlesBtn" Content="Parse" Height="25"  VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" HorizontalContentAlignment="Center" Visibility="Collapsed" FontFamily="Nunito SemiBold" FontSize="14"/>
                </Grid>

                <Grid x:Name="ColorPickerGrid" Visibility="Collapsed" Height="90" Margin="0,20,0,0" >
                    <StackPanel Orientation="Vertical">
                        <Label x:Name="ChangeColorLabel" Content="Change color for" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito SemiBold" FontSize="14" />
                        <Label x:Name="ChangeColorActorLabel" Content="ActorName" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito Black" FontSize="14" HorizontalAlignment="Center" />
                    </StackPanel>

                    <ComboBox x:Name="ColorPickerCombobox" SelectedIndex="{Binding SelectedColorIndex}" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="70" FontFamily="Nunito SemiBold" FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="20" Height="20" Background="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button x:Name="SetColorBtn" Content="Set color" HorizontalAlignment="Center" Height="25" VerticalAlignment="Bottom" Width="70" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFFFDAB3" Click="SetColorBtn_Click"/>
                    <Button x:Name="ColorPickerCancelBtn" Content="Cancel" HorizontalAlignment="Right" Height="25" VerticalAlignment="Bottom" Width="70" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFEAC9C1" Click="ColorPickerCancelBtn_Click"/>
                </Grid>

                <Grid x:Name="ActorReanameGrid" Height="110" Visibility="Collapsed" Margin="0,20,0,0" >
                    <StackPanel Orientation="Vertical">
                        <Label x:Name="RenameActorLabel" Content="Change color for" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito SemiBold" FontSize="14" />
                        <Label x:Name="ActorLabel" Content="ActorName" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito Black" FontSize="14" HorizontalAlignment="Center" />
                        <TextBox x:Name="ActorTextBox" HorizontalAlignment="Stretch" FontFamily="Nunito SemiBold" FontSize="14"/>
                    </StackPanel>

                    <Button x:Name="ActorReanameBtn" Content="Rename" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="70" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFFFDAB3" Click="RenameBtn_Click" />
                    <Button x:Name="ActorReanameCancelBtn" Content="Cancel" HorizontalAlignment="Right" Height="25" VerticalAlignment="Bottom" Width="70"  FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFEAC9C1" Click="ActorReanameCancelBtn_Click"/>
                </Grid>

                <Grid x:Name="AddActorGrid" Height="90" Visibility="Collapsed" Margin="0,20,0,0" >
                    <StackPanel Orientation="Vertical">
                        <Label x:Name="AddActorLabel" Content="Add actor" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito SemiBold" FontSize="14" />
                        <TextBox x:Name="AddActorTextBox" HorizontalAlignment="Stretch" FontFamily="Nunito SemiBold" FontSize="14"/>
                    </StackPanel>

                    <Button x:Name="AddActorBtn" Content="Add" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="70" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFFFDAB3" Click="AddActorBtn_Click" />
                    <Button x:Name="AddActorCancelBtn" Content="Cancel" HorizontalAlignment="Right" Height="25" VerticalAlignment="Bottom" Width="70"  FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFEAC9C1" Click="AddActorCancelBtn_Click"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" VerticalAlignment="Bottom" >
                <Button x:Name="SettingsBtn" HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="150" FontFamily="Nunito SemiBold" FontSize="14" Background="#FFFF8F64" BorderBrush="#FFFBD485" Style="{DynamicResource CustomButtonStyleWithGreenOwer}" Click="SettingsBtn_Click">
                    <Grid Width="145">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16" VerticalAlignment="Center" />
                        <TextBlock x:Name="SettingsTB" Text="Settings" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>



        <StackPanel x:Name="ButtonsFooter" Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,10,0,0" >
            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                <Label x:Name="SubtitlesLabel" Content="Subtitles" HorizontalAlignment="Center" Grid.Row="1" Foreground="White" FontFamily="Nunito SemiBold" FontSize="16"/>
                <Button x:Name="SelectSubtitlesBtn" Content="Select subtitles" Margin="0,0,0,10"  VerticalAlignment="Top" Width="150" HorizontalAlignment="Center" Visibility="Collapsed" FontFamily="Nunito SemiBold" FontSize="14" BorderBrush="{x:Null}" Style="{DynamicResource CustomButtonStyleWithRedOwer}" Click="SelectSubtitlesBtn_Click"/>

                <Button x:Name="SaveSubtitlesBtn"  VerticalAlignment="Top" Width="155" Margin="0,0,0,10" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFFFDAB3" Click="SaveSubtitlesBtn_Click">
                    <Grid Width="150">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="SaveSubtitlesTB" Text="Save subtitles" FontSize="14" HorizontalAlignment="Center" TextAlignment="Center" Margin="10,0,0,0" />
                    </Grid>
                </Button>
                <Button x:Name="ClearProjectBtn" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="155" Margin="0,0,0,10" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFFFDAB3" Click="ClearProjectBtn_Click">
                    <Grid Width="150">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA99;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="ClearProjectTB" Text="Clear the project" FontSize="14" HorizontalAlignment="Center" TextAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </Button>
                <Button x:Name="OpenCacheFolderBtn" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="155" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFFFDAB3" Click="OpenCacheFolderBtn_Click">
                    <Grid Width="150">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xED25;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="OpenCacheFolderTB" Text="Open cache folder" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <Label x:Name="CommentsLabel" Content="Comments" HorizontalAlignment="Center" Grid.Row="1" Foreground="White" FontFamily="Nunito SemiBold" FontSize="16"/>

                <ToggleButton x:Name="ViewOnlyWithCommentsBtn" Width="255" Margin="0,0,0,10" Style="{StaticResource CustomToggleButton}" HorizontalContentAlignment="Center" Background="#FFFFDAB3" Checked="ViewOnlyWithCommentsBtn_Checked" Unchecked="ViewOnlyWithCommentsBtn_Unchecked">
                    <Grid Width="250">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE90A;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="ViewOnlyWithCommentsTB" Text="View only with comments" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>

                <ToggleButton x:Name="RegionsOnlyWithCommentsBtn" Width="255" Margin="0,0,0,10" Style="{StaticResource CustomToggleButton}" HorizontalContentAlignment="Center" Background="#FFFFDAB3" Checked="RegionsOnlyWithCommentsBtn_Checked" Unchecked="RegionsOnlyWithCommentsBtn_Unchecked">
                    <Grid Width="250">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8A4;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="RegionsOnlyWithCommentsTB" Text="Regions only with comments" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
