                </Button>

            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <Label x:Name="ColorizeSettingsLabel" Content="Colorize Settings" HorizontalAlignment="Center" Grid.Row="1" Foreground="White" FontFamily="Nunito SemiBold" FontSize="16"/>

                <ToggleButton x:Name="ColorizeSelectedActorsBtn" Margin="0,0,0,10" Style="{StaticResource CustomToggleButton}" HorizontalContentAlignment="Center" Width="335" Checked="ColorizeSelectedActorsBtn_Checked" Unchecked="ColorizeSelectedActorsBtn_Unchecked">
                    <Grid Width="330">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE790;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="ColorizeSelectedActorsTB" Text="Colorize regions of selected actors" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>

                <ToggleButton x:Name="ColorizeSelectedTracksBtn" Margin="0,0,0,10" Style="{StaticResource CustomToggleButton}" HorizontalContentAlignment="Center"  Width="335" Checked="ColorizeSelectedTracksBtn_Checked" Unchecked="ColorizeSelectedTracksBtn_Unchecked">
                    <Grid Width="330">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xed64;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="ColorizeSelectedTracksTB" Text="Colorize tracks of selected actors" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>

                <ToggleButton x:Name="ColorizeSelectedActorsCommentsBtn" HorizontalContentAlignment="Left" Style="{StaticResource CustomToggleButton}"  Width="335" Checked="ColorizeSelectedActorsCommentsBtn_Checked" Unchecked="ColorizeSelectedActorsCommentsBtn_Unchecked">
                    <Grid Width="330">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xe7e6;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="ColorizeSelectedActorsCommentsTB" Text="Colorize regions with comments of selected actors" TextWrapping="WrapWithOverflow" HorizontalAlignment="Right" FontFamily="Nunito SemiBold" FontSize="14" Width="320" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <Label x:Name="CheckLabel" Content="Check" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito SemiBold" FontSize="16"/>

                <ToggleButton x:Name="CheckForMissingBtn" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{StaticResource CustomToggleButton}" Width="170" Margin="0,0,0,10" Checked="CheckForMissingBtn_Checked" Unchecked="CheckForMissingBtn_Unchecked" >
                    <Grid Width="160">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEC54;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="CheckForMissingTB" Text="Check for missing" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>

                <ToggleButton x:Name="CheckForRepeatsBtn" VerticalAlignment="Top" Foreground="Black"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource CustomToggleButton}" Width="170" Margin="0,0,0,10" BorderBrush="#FF707070" Checked="CheckForRepeatsBtn_Checked" Unchecked="CheckForRepeatsBtn_Unchecked">
                    <Grid Width="160">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE716;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="CheckForRepeatsTB" Text="Check for repeats" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>

                <ToggleButton x:Name="FindDemoPhrasesBtn" VerticalAlignment="Top" Foreground="Black"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource CustomToggleButton}" Width="170" BorderBrush="#FF707070" Checked="FindDemoPhrasesBtn_Checked" Unchecked="FindDemoPhrasesBtn_Unchecked">
                    <Grid Width="160">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE779;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="FindDemoPhrasesTB" Text="Find Demo Phrases" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </ToggleButton>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <Label x:Name="SyncLabel" Content="Sync" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito SemiBold" FontSize="16"/>
                <Button x:Name="SyncCursorBtn" Width="88" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FF4CD03A" Click="SyncBtn_Click">
                    <Grid Width="75">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE895;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="SyncCursorTB" Text="Cursor" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </Button>

                <Button x:Name="SyncProjectBtn" Width="88" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithRedOwer}" BorderThickness="0" Background="#FFD03A63" Click="SyncProjectBtn_Click" Margin="0,10,0,10">
                    <Grid Width="75">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE895;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <TextBlock x:Name="SyncProjectTB" Text="Project" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
            <Label x:Name="CommentsBlockLabel" Content="Comments" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontFamily="Nunito SemiBold" FontSize="14"/>
            <Button x:Name="ImportCommentsBtn" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="150" Background="#FFEFCFE3" BorderBrush="#FFE27396" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithGreenOwer}" Click="ImportCommentsBtn_Click">
                <Grid Width="145">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xEA53;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    <TextBlock x:Name="ImportCommentsTB" Text="Import" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
                </Grid>
            </Button>
            <Button x:Name="SeparateExportCommentsBtn" Margin="0,10,0,10" VerticalAlignment="Top" HorizontalAlignment="Center" Width="150" Background="#FFEAC9C1" FontFamily="Nunito SemiBold" FontSize="14" Style="{DynamicResource CustomButtonStyleWithGreenOwer}" Click="SeparateExportCommentsBtn_Click">
                <Grid Width="145">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    <TextBlock x:Name="SeparateExportCommentsTB" Text="Separated export" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0" TextAlignment="Center"/>
