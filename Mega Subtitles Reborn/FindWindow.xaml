<Window x:Class="Mega_Subtitles_Reborn.FindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mega_Subtitles_Reborn"
        mc:Ignorable="d"
        Title="Find" Height="85" Width="420"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow" FontFamily="Nunito SemiBold" FontSize="14"
        Background="#FFEFCFE3" BorderBrush="#FFE27396" PreviewKeyDown="Window_PreviewKeyDown">
    <StackPanel Margin="10" Orientation="Horizontal">
        <TextBox x:Name="SearchTextBox" VerticalAlignment="Center" Width="300" FontFamily="Nunito SemiBold" FontSize="14" TextChanged="SearchTextBox_TextChanged" MouseDoubleClick="SearchTextBox_MouseDoubleClick"/>
        <Button x:Name="FindBtn" Content="Find" Click="Find_Click" HorizontalAlignment="Right" Width="70" Margin="10,0,0,0" VerticalAlignment="Center" FontFamily="Nunito SemiBold" FontSize="14"/>
    </StackPanel>
</Window>
